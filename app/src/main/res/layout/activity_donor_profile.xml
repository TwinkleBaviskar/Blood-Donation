<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".DonorProfileActivity">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/backarrow"
        android:contentDescription="Back"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_toEndOf="@id/backButton"
        android:layout_alignTop="@id/backButton"
        android:layout_marginStart="16dp" />

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/backButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/profile"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_bg"
        android:padding="2dp" />

    <!-- Name -->
    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benjamin Jack"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/profileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- Last Donation -->
    <TextView
        android:id="@+id/lastDonation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Donation: December, 2023"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_below="@id/profileName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <!-- Stats Container -->
    <LinearLayout
        android:id="@+id/statsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lastDonation"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center">

        <!-- Donated -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/box_border"
            android:padding="12dp"
            android:layout_marginEnd="4dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donated"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- Blood Type -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/box_border"
            android:padding="12dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A-"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Type"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- Life Saved -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/box_border"
            android:padding="12dp"
            android:layout_marginStart="4dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Life Saved"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Map Placeholder (auto-adjusts height) -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/buttonContainer"
        android:layout_below="@id/statsContainer"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#E0E0E0" />

    <!-- Bottom Buttons (stuck to bottom) -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:background="#FFFFFF">

        <!-- Call Button (solid pink) -->
        <TextView
            android:id="@+id/callButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Call"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_solid_pink"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp" />

        <!-- Request Button (pink border only) -->
        <TextView
            android:id="@+id/requestButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Request"
            android:textColor="#E91E63"
            android:textStyle="bold"
            android:background="@drawable/button_border_pink"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp" />
    </LinearLayout>

</RelativeLayout>
