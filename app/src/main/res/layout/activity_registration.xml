<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".RegistrationActivity">

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="1"
     android:fillViewport="true">

  <LinearLayout
      android:id="@+id/main"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingBottom="30dp">

   <!-- Heading -->
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Sign Up Your Account"
       android:textColor="@color/black"
       android:textSize="25sp"
       android:textStyle="bold"
       android:gravity="center"
       android:paddingHorizontal="40dp"
       android:layout_marginTop="50dp" />

   <!-- Full Name -->
   <EditText
       android:id="@+id/editFullName"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Full Name"
       android:padding="12dp"
       android:background="@drawable/edttext_border_black"
       android:layout_marginTop="40dp"
       android:layout_marginHorizontal="30dp"
       android:imeOptions="actionNext"
       android:inputType="textPersonName" />

   <!-- Mobile -->
   <EditText
       android:id="@+id/editMobile"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Mobile Number"
       android:inputType="phone"
       android:maxLength="10"
       android:padding="12dp"
       android:background="@drawable/edttext_border_black"
       android:layout_marginTop="18dp"
       android:layout_marginHorizontal="30dp"
       android:imeOptions="actionNext" />

   <!-- Email -->
   <EditText
       android:id="@+id/editEmail"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Email"
       android:inputType="textEmailAddress"
       android:padding="12dp"
       android:background="@drawable/edttext_border_black"
       android:layout_marginTop="18dp"
       android:layout_marginHorizontal="30dp"
       android:imeOptions="actionNext" />

   <!-- Password -->
   <EditText
       android:id="@+id/editPassword"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Password"
       android:inputType="textPassword"
       android:padding="12dp"
       android:background="@drawable/edttext_border_black"
       android:layout_marginTop="18dp"
       android:layout_marginHorizontal="30dp"
       android:imeOptions="actionNext" />

   <!-- Age -->
   <EditText
       android:id="@+id/editAge"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Age"
       android:inputType="number"
       android:maxLength="3"
       android:padding="12dp"
       android:background="@drawable/edttext_border_black"
       android:layout_marginTop="18dp"
       android:layout_marginHorizontal="30dp"
       android:imeOptions="actionNext" />

   <!-- Gender -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center_vertical"
       android:layout_marginTop="18dp"
       android:background="@drawable/edttext_border_black"
       android:layout_marginHorizontal="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender:"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp" />

    <RadioGroup
        android:id="@+id/radioGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

     <RadioButton
         android:id="@+id/radioMale"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Male"
         android:textColor="@color/black" />

     <RadioButton
         android:id="@+id/radioFemale"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Female"
         android:textColor="@color/black" />
    </RadioGroup>
   </LinearLayout>

   <!-- Blood Group (AutoCompleteTextView) -->
   <AutoCompleteTextView
       android:id="@+id/editBloodGroup"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Blood Group (A+, O-...)"
       android:padding="12dp"
       android:background="@drawable/edttext_border_black"
       android:layout_marginTop="18dp"
       android:layout_marginHorizontal="30dp"
       android:imeOptions="actionNext"
       android:inputType="text"
       android:dropDownHeight="220dp"
       android:dropDownVerticalOffset="6dp"
       android:dropDownWidth="match_parent"
       android:popupElevation="8dp"
       android:dropDownAnchor="@id/editBloodGroup"
       android:completionThreshold="1"
       android:popupBackground="@drawable/auto_complete_popup_bg" />

   <!-- Weight -->
   <EditText
       android:id="@+id/editWeight"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Weight (kg)"
       android:inputType="numberDecimal"
       android:maxLength="5"
       android:padding="12dp"
       android:background="@drawable/edttext_border_black"
       android:layout_marginTop="18dp"
       android:layout_marginHorizontal="30dp"
       android:imeOptions="actionNext" />

   <!-- Hemoglobin (AutoCompleteTextView) -->
   <AutoCompleteTextView
       android:id="@+id/editHemoglobin"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Hemoglobin (g/dL)"
       android:inputType="numberDecimal"
       android:maxLength="5"
       android:padding="12dp"
       android:background="@drawable/edttext_border_black"
       android:layout_marginTop="18dp"
       android:layout_marginHorizontal="30dp"
       android:imeOptions="actionNext"
       android:dropDownHeight="200dp"
       android:dropDownVerticalOffset="6dp"
       android:dropDownWidth="match_parent"
       android:popupElevation="8dp"
       android:dropDownAnchor="@id/editHemoglobin"
       android:completionThreshold="1"
       android:popupBackground="@drawable/auto_complete_popup_bg" />

   <!-- Last Donation -->
   <EditText
       android:id="@+id/editLastDonation"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Last Donation Date"
       android:focusable="false"
       android:clickable="true"
       android:padding="12dp"
       android:background="@drawable/edttext_border_black"
       android:layout_marginTop="18dp"
       android:layout_marginHorizontal="30dp"
       android:imeOptions="actionDone" />

   <!-- Terms -->
   <CheckBox
       android:id="@+id/checked"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="I agree to the terms and conditions"
       android:layout_marginTop="12dp"
       android:layout_marginHorizontal="30dp" />

   <!-- Sign Up -->
   <Button
       android:id="@+id/btnsignup"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Sign Up"
       android:textAllCaps="false"
       android:textSize="18sp"
       android:textColor="@android:color/white"
       app:backgroundTint="#E91E63"
       app:cornerRadius="10dp"
       android:layout_marginTop="12dp"
       android:layout_marginHorizontal="30dp"
       android:padding="12dp" />
  </LinearLayout>
 </ScrollView>

 <!-- Bottom Sign In -->
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:gravity="center"
     android:padding="16dp">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Already have an account?"
      android:textSize="14sp"
      android:textStyle="bold"
      android:textColor="@color/black" />

  <TextView
      android:id="@+id/txtSignIn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text=" Sign In"
      android:textSize="14sp"
      android:textStyle="bold"
      android:textColor="#E91E63"
      android:layout_marginStart="4dp" />
 </LinearLayout>

</LinearLayout>
