<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:fitsSystemWindows="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/donorImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/profile"
            android:background="@drawable/circle_bg"
            android:padding="2dp"/>

        <!-- Donor Name -->
        <TextView
            android:id="@+id/donorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/donorImage"
            android:layout_marginStart="12dp"
            android:text="Donor Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Donor Location -->
        <TextView
            android:id="@+id/donorLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/donorName"
            android:layout_toEndOf="@id/donorImage"
            android:layout_marginStart="12dp"
            android:text="Location"
            android:textSize="14sp"
            android:textColor="#888888"/>

        <!-- Last Donation -->
        <TextView
            android:id="@+id/donorLastDonation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/donorLocation"
            android:layout_toEndOf="@id/donorImage"
            android:layout_marginStart="12dp"
            android:text="Last Donation: 2 months ago"
            android:textSize="13sp"
            android:textColor="#555555"/>

        <!-- Lives Saved -->
        <TextView
            android:id="@+id/donorLivesSaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/donorLastDonation"
            android:layout_toEndOf="@id/donorImage"
            android:layout_marginStart="12dp"
            android:text="Lives Saved: 12"
            android:textSize="13sp"
            android:textColor="#00897B"/>

        <!-- Blood Group -->
        <TextView
            android:id="@+id/donorBlood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/blood_group"
            android:drawablePadding="4dp"
            android:text="A+"
            android:textSize="14sp"
            android:textColor="#E53935"
            android:textStyle="bold"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
